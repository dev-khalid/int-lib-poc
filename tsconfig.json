{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./libs",
    "outDir": "./libs",
    "baseUrl": "./",
    "paths": {
      "@app/worker": [
        "libs/worker/src"
      ],
      "@app/worker/*": [
        "libs/worker/src/*"
      ],
      "@app/shared": [
        "libs/shared/src"
      ],
      "@app/shared/*": [
        "libs/shared/src/*"
      ]
    }
  },
  "include": ["libs/**/.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}